    <br />
    <dl class="dl-horizontal subrowHeader verticalTable">
        <dt>
            @Html.DisplayNameFor(model => model.PPic)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PPic)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>
        <dt>
            @*@Html.DisplayNameFor(model => model.Log.ComTxt)*@
        </dt>
        <dd>
