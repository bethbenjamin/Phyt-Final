<div id="selectedPatient" style="display:none">@Html.DisplayFor(model => model.PID)</div>

<a class="ViewLogs btn btn-sm animated-button thar-three" id="patient-home-button">VIEW PATIENT LOGS</a>
<br />
<a class="VewRX btn btn-sm animated-button thar-three" id="patient-home-button">VIEW PATIENT RX</a>
<br />
<a class="CreateRX btn btn-sm animated-button thar-three" id="patient-home-button">CREATE RX FOR PATIENT</a>
<br />
<p>
    <table class="table" style="border:none">
        <tr>
            <td>
                <button class="btn btn-info btn-sm tableBtn ui-btn ui-shadow ui-corner-all">
                    @*@Html.ActionLink("Edit", "Edit", new { id = Model.PID }) |*@
                    @Html.ActionLink("Back to Patients List", "Index")
                </button>
            </td>
        </tr>
    </table>
</p>
@*@Html.ActionLink("Back to Patients List", "Index")*@
<script src="~/Scripts/jquery-3.3.1.js"></script>
@section Scripts {
    <script>

        var patient = document.getElementById("selectedPatient").innerText.toString();
        var thepatient = parseInt(patient);
        console.log(thepatient);

        $(document).ready(function () {

            $(".ViewLogs").click(function () {

                window.location.assign("/Logs/Index/?PID=" + thepatient);
            })

            $(".VewRX").click(function () {

                window.location.assign("/RXes/Index/?PID=" + thepatient);
            })

            $(".CreateRX").click(function () {

                window.location.assign("/RXes/Create/?PID=" + thepatient);
            })

        })
    </script>

}