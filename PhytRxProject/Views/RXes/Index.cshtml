@model IEnumerable<PhytRxProject.Models.RX>
@{
    ViewBag.Title = "Index";
}
<h3 class="heading1">Rx Index</h3>
<p>
    <table class="table" style="border:none">
        <tr>
            <td>
                <button class="btn btn-info btn-sm tableBtn ui-btn ui-shadow ui-corner-all">
                    @Html.ActionLink("Create New", "Create")
                </button>
            </td>
        </tr>
        </table>
</p>
<input type="hidden" value="@ViewBag.PID" />

<table class="table">
    <tr class="backgroundDark">
        <th>
            @Html.DisplayNameFor(model => model.RxName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.UserID)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if (ViewBag.PID == item.Patient.PID)
        {
            <tr class="backgroundMist2">
                <td>
                    @Html.DisplayFor(modelItem => item.RxName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LogID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.UserID)
                </td>
                <td>
                    <button class="btn btn-info btn-sm tableBtn ui-btn ui-shadow ui-corner-all"> @Html.ActionLink("Edit", "Edit", new { id = item.RxID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RxID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RxID })
                    </button>
                </td>
            </tr>
        }
    }
</table>
